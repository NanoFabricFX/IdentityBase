@model IdentityBase.Actions.Account.ProfileViewModel

<div class="login-page">
    <div class="page-header">
        <h1 localize="">User account</h1>
    </div>

    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("AccountMenu")
        </div>
        <div class="col-md-9">

            <h4 localize="">Profile</h4>
            @Html.Partial("_ValidationSummary")

            <div class="row">
                <div class="col-md-6">
                    <form id="formProfile"
                          method="post"
                          asp-route="AccountProfile"
                          asp-route-clientId="@Model.ClientId"
                          novalidate="novalidate">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email" localize="">Email</label>
                                <input class="form-control"
                                       readonly="readonly"
                                       placeholder="@Localizer["Enter email"]"
                                       asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                                @if (!Model.IsEmailVerified)
                                {
                                    <button id="email-verification" type="submit" class="btn btn-link" formaction="/account/Manage?handler=SendVerificationEmail">Send verification email</button>
                                }
                                @*<span asp-validation-for="Email"></span>*@
                            </div>
                            @* <div class="form-group">
                                <label asp-for="Phone" localize="">Phone number</label>
                                <input class="form-control"
                                       placeholder="@Localizer["Enter phone number"]"
                                       asp-for="Phone" />
                            </div>*@
                            
                            <div class="form-group">
                                <button class="btn btn-primary" localize="" disabled>
                                    Save
                                </button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>