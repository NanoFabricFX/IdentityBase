@model IdentityBase.Actions.Recover.ConfirmViewModel

<div class="login-page">
    <div class="page-header">
        <h1 localize="">Recover Account</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"
                        localize="">Change your password</h3>
                </div>
                <div class="panel-body">
                    <form method="post">

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Password" localize="">Password</label>
                                <input type="password"
                                       class="form-control"
                                       placeholder="@Localizer["Password"]"
                                       asp-for="Password"
                                       autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PasswordConfirm" localize="">PasswordConfirm</label>
                                <input type="password"
                                       class="form-control"
                                       placeholder="@Localizer["Repeat Password"]"
                                       asp-for="PasswordConfirm"
                                       autocomplete="off" />
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary"
                                        localize="">Complete</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>